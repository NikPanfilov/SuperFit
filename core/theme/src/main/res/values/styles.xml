<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppNameMain" parent="Theme.Material3.Light">
		<item name="android:textSize">64sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="fontFamily">@font/montserrat</item>
	</style>

	<style name="EditText" parent="Theme.Material3.Light">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="fontFamily">@font/montserrat</item>
	</style>

	<style name="TextView" parent="Widget.AppCompat.TextView">
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="fontFamily">@font/montserrat</item>
	</style>

	<style name="NavigationButton" parent="Theme.Material3.Light">
		<item name="android:background">@android:color/transparent</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="fontFamily">@font/montserrat_medium</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="ButtonCode" parent="Widget.AppCompat.Button">
		<item name="android:textSize">64sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:fontFamily">@font/montserrat_extralight</item>
		<item name="android:background">@drawable/code_button</item>
		<item name="android:includeFontPadding">false</item>
	</style>

	<style name="Header" parent="Widget.AppCompat.TextView">
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">24sp</item>
		<item name="fontFamily">@font/montserrat_semibold</item>
	</style>

	<style name="Header.White">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">24sp</item>
		<item name="fontFamily">@font/montserrat_semibold</item>
	</style>

	<style name="Chip" parent="Widget.MaterialComponents.Chip.Entry">
		<item name="closeIconVisible">false</item>
		<item name="checkedIconVisible">false</item>
		<item name="android:textColor">@drawable/chip_color</item>
		<item name="chipBackgroundColor">@color/dialog_background</item>
		<item name="android:textSize">14sp</item>
		<item name="fontFamily">@font/roboto</item>
	</style>
</resources>